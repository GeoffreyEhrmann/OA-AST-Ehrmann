extends layout

block content
  .container
    .jumbotron.margin-top
      #form
        p Please create yout account
        form#login(action='/signup', method="post")
          .form-group
            label Username : 
            input(type='text', name="username")
          .form-group
            label Password : 
            input(type='password', name="password")
          .form-group
            label Email :
            input(type='email', name="email")

          button#login_submit.btn.btn-success.btn-block(type='submit')
            i.icon-ok.icon-white
            |  Create your account