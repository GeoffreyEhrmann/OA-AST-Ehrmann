extends layout

block content
  .container
    .jumbotron.margin-top.col-md-offset-4.col-md-4
      #form
        p Please enter your IDs
        hr
        form#login(action='/login', method="post")
          .form-group
            label Username :
            input(type='text', name="username")
          .form-group
            label Password :
            input(type='password', name="password")
          

          button#login_submit.btn.btn-success.btn-block(type='submit')
            i.icon-ok.icon-white
            |  Connect to your account
          hr
        form(action='/signup', method="get")
          button.btn.btn-primary.btn-block(type='submit') Create a new account